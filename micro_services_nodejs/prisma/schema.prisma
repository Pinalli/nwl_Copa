generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Notification {
  id       String @id
  recipinetId String
  content  String
  category String
  readAt  DateTime? //pode n√£o ter lido
  createdAt DateTime @default(now())

  @@index([recipinetId]) //indexa o recipinetId
}
